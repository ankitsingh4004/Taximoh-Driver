<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#FAFAFA"
        android:layout_gravity="center"
        android:gravity="center"
        app:title="Trip Detail"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="@+id/fragment_container1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                     />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rideno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ride No :"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            />

                        <ImageView
                            android:layout_width="@dimen/dim_50"
                            android:layout_height="@dimen/dim_50"
                            android:src="@drawable/cancel_stamp"
                            android:visibility="gone"
                            android:id="@+id/cancel"
                            ></ImageView>
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="CANCELLED"
                            android:textColor="#000"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000">


                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dim_30"
                            android:layout_height="@dimen/dim_30"
                            android:layout_gravity="left"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/image"
                            android:src="@drawable/trip_icon">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|right"
                            android:text="Mini White Wagnor"
                            android:textColor="#000"
                            android:id="@+id/vechileno"
                            android:textSize="18sp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            >

                        </TextView>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000">


                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/tagprice">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="30dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0"
                                android:id="@+id/tfare"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/image"
                                >

                            </TextView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/dim_10"
                                    android:layout_height="@dimen/dim_10"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_brightness_1_24"
                                    app:tint="#16F14C" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Origin"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dim_10"
                                android:id="@+id/origin"
                                >


                            </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/dim_10"
                                    android:layout_height="@dimen/dim_10"

                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_brightness_1_24"
                                    app:tint="#E11D1D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Destination"
                                android:layout_marginLeft="@dimen/dim_10"
                                android:id="@+id/destination"
                                android:layout_gravity="center"
                                android:layout_below="@+id/origin">


                            </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000">


                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Details"
                            android:textColor="#000"
                            android:textStyle="bold"

                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            >

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/origin"
                                android:text="$212"
                                android:id="@+id/name"
                                android:textColor="#000"
                                android:textSize="16sp">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone No"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:text="$2"
                                android:id="@+id/number"
                                android:layout_below="@+id/origin">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                >


                            </TextView>
                            <RatingBar
                                android:id="@+id/simpleRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                />
                            <!--       <ImageView
                                       android:layout_width="@dimen/dim_20"
                                       android:layout_height="@dimen/dim_20"
                                       android:text=""
                                       android:textColor="#000"
                                       android:layout_marginLeft="10dp"
                                       android:textSize="16sp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/star"
                                       >


                                   </ImageView>
                                   <ImageView
                                       android:layout_width="@dimen/dim_20"
                                       android:layout_height="@dimen/dim_20"
                                       android:text=""
                                       android:textColor="#000"
                                       android:layout_marginLeft="5dp"
                                       android:textSize="16sp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/star"
                                       >


                                   </ImageView>
                                   <ImageView
                                       android:layout_width="@dimen/dim_20"
                                       android:layout_height="@dimen/dim_20"
                                       android:text=""
                                       android:textColor="#000"
                                       android:layout_marginLeft="5dp"
                                       android:textSize="16sp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/star"
                                       >


                                   </ImageView>
                                   <ImageView
                                       android:layout_width="@dimen/dim_20"
                                       android:layout_height="@dimen/dim_20"
                                       android:text=""
                                       android:textColor="#000"
                                       android:layout_marginLeft="5dp"
                                       android:textSize="16sp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/star"
                                       >


                                   </ImageView>

                                   <ImageView
                                       android:layout_width="@dimen/dim_20"
                                       android:layout_height="@dimen/dim_20"
                                       android:text=""
                                       android:textColor="#000"
                                       android:layout_marginLeft="5dp"
                                       android:textSize="16sp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/star"
                                       >


                                   </ImageView>-->

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Details"
                            android:textColor="#000"
                            android:textStyle="bold"

                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            >

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Base Fare"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/origin"
                                android:text="$212"
                                android:id="@+id/basefare"
                                android:textColor="#000"
                                android:textSize="16sp">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fare Per mile"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:text="$2"
                                android:id="@+id/permile"
                                android:layout_below="@+id/origin">


                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tax"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:id="@+id/taxrate"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:text="$2"
                                android:id="@+id/tax"
                                android:layout_below="@+id/origin">


                            </TextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="20dp"
                            android:background="#000">


                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Bill"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:layout_weight="1"
                                >


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="$2"
                                android:id="@+id/fare"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_below="@+id/origin">


                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/image"
                        >

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CASH"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            >


                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="$212"
                            android:id="@+id/faret"
                            android:layout_below="@+id/origin">


                        </TextView>
                    </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:background="#000">


                    </View>


                </LinearLayout>




        </LinearLayout>
    </ScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>

