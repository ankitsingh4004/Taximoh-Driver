<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#FAFAFA"
        android:layout_gravity="center"
        android:gravity="center"
        app:title="My Wallet"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="@+id/fragment_container1"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show"
            android:visibility="visible"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOTAL BALANCE"
                        android:textAllCaps="true"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        >

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/earning"
                        android:textAllCaps="true"
                        android:text="$ 1000"
                        android:layout_marginLeft="5dp"
                        android:textStyle="normal"
                        android:textColor="@color/green1"
                        android:layout_marginTop="2dp"
                        android:textSize="32sp"
                        android:layout_gravity="center"
                        >

                    </TextView>


                </LinearLayout>

  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
      android:layout_marginTop="@dimen/dim_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available BALANCE"
                        android:textAllCaps="true"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        >

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:text="$ 900"
                        android:layout_marginLeft="5dp"
                        android:textStyle="normal"
                        android:textColor="@color/green1"
                        android:layout_marginTop="2dp"
                        android:textSize="32sp"
                        android:layout_gravity="center"
                        >

                    </TextView>


                </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/array"
    android:layout_marginTop="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:gravity="left"
        android:textSize="@dimen/dim_20"
        android:textColor="#393939"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="PAYMENT HISTORY"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">


    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/date"
        app:srcCompat="@drawable/ic_baseline_date_range_24"
        tools:ignore="VectorDrawableCompat">


    </ImageView>

</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="left"
                android:textSize="18sp"
                android:textColor="#393939"
                android:id="@+id/dateshow"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:text="Today, 15-03-2021"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">


            </TextView>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dim_35"
                        android:layout_height="@dimen/dim_35"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:id="@+id/currency"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:background="@drawable/background"
                        >

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CASH"
                            android:id="@+id/pmode"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            >

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CRN No #1"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:id="@+id/rideno"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/image"
                            >

                        </TextView>




                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:id="@+id/price"
                        android:text="$100"
                        />


                </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- 60"
                        android:textColor="#F33131"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"                        >

                    </TextView>


                       <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ 40"
                        android:textColor="#00E676"
                        android:textSize="15sp"
                        android:gravity="right"
                           android:layout_marginBottom="5dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"                        >

                    </TextView>





                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:layout_marginRight="@dimen/dim_20"
                    android:background="#000"></View>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_10"
                android:visibility="gone"
                android:id="@+id/recyclerview"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </ScrollView>



</RelativeLayout>

