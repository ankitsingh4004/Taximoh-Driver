<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#FAFAFA"
        android:layout_gravity="center"
        android:gravity="center"
        app:title="TAXIMOH"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="@+id/fragment_container1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="Welcome">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Required steps"
                android:textColor="#000"
                android:textSize="16sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="22dp"
                android:text="Here's what you need to do to set up your account">

            </TextView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                app:cardElevation="4dp"
                android:id="@+id/card1"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:id="@+id/txt1"
                            android:padding="10dp"
                            android:text="Recommended next step">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:id="@+id/txt11"
                            android:layout_below="@+id/time"
                            android:text="Background Check">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:id="@+id/img1"
                        android:background="@drawable/bgoval"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="30dp">

                    </ImageView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="4dp"
                android:id="@+id/card2"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:padding="10dp"
                            android:text="Get Started">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_below="@+id/time"
                            android:text="Profile Photo">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:id="@+id/img2"

                        android:background="@drawable/bgoval"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="30dp">

                    </ImageView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="4dp"
                android:id="@+id/card3"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:padding="10dp"
                            android:text="Get Started">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_below="@+id/time"
                            android:text="Driver's License">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:id="@+id/img3"

                        android:background="@drawable/bgoval"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="30dp">

                    </ImageView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="4dp"
                android:id="@+id/card4"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:padding="10dp"
                            android:text="Get Started">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_below="@+id/time"
                            android:text="Vehicle Insurance">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:id="@+id/img4"

                        android:background="@drawable/bgoval"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="30dp">

                    </ImageView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                app:cardElevation="4dp"
                android:id="@+id/card5"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="337dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Get Started"
                            android:textColor="#000"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="Vehicle Registration"
                            android:textColor="#000"
                            android:textSize="18sp">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:id="@+id/img5"

                        android:background="@drawable/bgoval"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="30dp">

                    </ImageView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>